<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="ch.avectris.todo.TodoListClient.controller.Detail" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page
				title="{todo_service>title}"
				showNavButton="true"
				navButtonPress="onNavBack">
				<content>
					<VBox
						id="generalDetails"
						class="sapUiMediumMargin">
						
						<Label text="Description" class="sapUiSmallMarginTop"/>
						<Text text="{todo_service>description}" />
					
						<Label text="Finish date" class="sapUiSmallMarginTop"/>
						<Text text="{path: 'todo_service>finishDate', formatter: '.formatter.dateFormat' }" />
					</VBox>
				</content>
				<footer>
					<Bar>
						<contentRight>
							<Button
					        	text="Delete"
					        	type="Reject"
								press="onDeletePress" />
						</contentRight>
					</Bar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>